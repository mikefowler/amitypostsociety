!!! 5
%html{:lang => "en"}
%head
  %meta{:charset => "UTF-8"}
  %title Amity Post Society
  %link{:rel => "stylesheet", :href => "//brick.a.ssl.fastly.net/Raleway:200,200i,500,700"}
  %link{:rel => "stylesheet", :href => "/styles/app.css"}
  %link{:rel => "shortcut icon", :href => "/images/favicon.png"}
  %meta{:name => "viewport", :content => "width=device-width"}
  
%body{:class => "#{@body_class}"}
  
  %header
    %h1
      %a{:href => "/"}
        %img{:src => "/images/logo.png", :alt => "Logo"}
          %span.hide Amity Post Society
  
  %nav
    %ul
      %li
        %a{:href => "/", :class => "nav-home"} Home
      - settings.pages.each do |link|
        %li
          %a{:href => "/#{link.downcase}", :class => "#{active?(link.downcase)}"}= link.capitalize
        
  %main
    = yield
  
  %footer
    A project by
    %a{:href => "http://mikefowler.me"} Mike Fowler
  
  :javascript
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-49592268-1', 'amitypostsociety.com');
    ga('send', 'pageview');
  
  %script{:src => "/scripts/app.js"}
